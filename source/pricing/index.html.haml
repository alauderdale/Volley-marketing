%section#main-hero.no-padding-bottom
	.container
		.row.justify-content-center
			.col-lg-9
				.double-margin-top
					%h1.market.bold-font.double-margin-bottom.text-center
						Pricing
					%h2.double-margin-bottom.text-center
						Get a free plan forever or upgrade for unlimited projects and team management.
				.double-margin-top.text-center.double-marign-bottom
					%a.btn.btn-primary.btn-lg.btn-block-sm{:href=>"https://app.meetvolley.com/sign-up"}
						Sign up for Volley free
					%h4.half-margin-top
						No credit card required
		/ .row.double-margin-top
		/ 	.col-lg-4
		/ 		.padded
		/ 			.card.text-center.check-card.check-card-flat
		/ 				.card-body
		/ 					%p.quarter-margin-bottom.bold-font
		/ 						Get started in seconds
		/ 					%p.light-text-color.no-margin-bottom
		/ 						Get started with 1 project to store all your notes
		/ 	.col-lg-4
		/ 		.padded
		/ 			.card.text-center.check-card.check-card-flat
		/ 				.card-body
		/ 					%p.quarter-margin-bottom.bold-font
		/ 						Effortless collaboration
		/ 					%p.light-text-color.no-margin-bottom
