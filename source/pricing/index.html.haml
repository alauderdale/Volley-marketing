			.col-lg-12
				.border-text.text-center
					%h2
						All available plans
				=partial('/shared/pricing-table')


%section.off-white-bg
	.container
		.row.justify-content-center
			.col-lg-11
				.text-center
					%h2.market.margin-bottom.bold-font
						Dont take our word for it…
